<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GamesHub - Play Games Online</title>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #121212;
      color: #fff;
    }
    header {
      background: #1f1f1f;
      padding: 20px;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.6);
    }
    header h1 {
      color: #4caf50;
      margin: 0;
      font-size: 2rem;
    }
    .search-bar {
      margin: 20px auto;
      text-align: center;
    }
    .search-bar input {
      padding: 10px;
      width: 80%;
      max-width: 400px;
      font-size: 1rem;
      border-radius: 8px;
      border: none;
    }
    .category-filters {
      text-align: center;
      margin-bottom: 20px;
    }
    .category-filters button {
      background: #2a2a2a;
      color: #fff;
      border: none;
      margin: 5px;
      padding: 10px 15px;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }
    .category-filters button.active,
    .category-filters button:hover {
      background: #4caf50;
    }
    .games-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
      gap: 15px;
      padding: 20px;
      max-width: 1200px;
      margin: auto;
    }
    .game-card {
      background: #1e1e1e;
      border-radius: 10px;
      padding: 10px;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.5);
      transition: transform 0.2s ease;
    }
    .game-card:hover {
      transform: scale(1.03);
    }
    .game-card img {
      width: 100%;
      height: 100px;
      object-fit: contain;
      background: #000;
      border-radius: 6px;
      margin-bottom: 10px;
    }
    .game-card a {
      color: #fff;
      font-weight: bold;
      text-decoration: none;
    }
    footer {
      background: #1f1f1f;
      padding: 15px;
      text-align: center;
      font-size: 0.9rem;
      color: #777;
    }
  </style>
</head>
<body>
  <header>
    <h1>GamesHub</h1>
  </header>

  <div class="search-bar">
    <input type="text" id="searchInput" placeholder="Search games...">
  </div>

  <div class="category-filters">
    <button class="filter-btn active" data-category="all">All</button>
    <button class="filter-btn" data-category="puzzle">Puzzle</button>
    <button class="filter-btn" data-category="action">Action</button>
    <button class="filter-btn" data-category="classic">Classic</button>
    <button class="filter-btn" data-category="multiplayer">Multiplayer</button>
  </div>

  <div class="games-grid" id="gamesGrid">
    <!-- Game cards inserted by JavaScript -->
  </div>

  <footer>
    &copy; 2025 GamesHub. All rights reserved.
  </footer>

  <script>
    const games = [
      { title: "2048", url: "https://play2048.co/", img: "https://upload.wikimedia.org/wikipedia/commons/5/57/2048_logo.svg", category: "puzzle" },
      { title: "Flappy Bird", url: "https://flappybird.io/", img: "https://upload.wikimedia.org/wikipedia/en/0/02/Flappy_Bird_icon.png", category: "action" },
      { title: "Snake", url: "https://playsnake.org/", img: "https://upload.wikimedia.org/wikipedia/commons/4/49/Snake_icon.svg", category: "classic" },
      { title: "Agar.io", url: "https://agar.io/", img: "https://upload.wikimedia.org/wikipedia/en/6/62/Agar.io_logo.png", category: "multiplayer" },
      { title: "Slither.io", url: "https://slither.io/", img: "https://upload.wikimedia.org/wikipedia/en/6/6c/Slither.io_logo.png", category: "multiplayer" },
      { title: "Tetris", url: "https://tetris.com/play-tetris", img: "https://tetris.com/favicon.ico", category: "classic" },
      { title: "Chess", url: "https://www.chess.com/play/computer", img: "https://www.chess.com/bundles/web/images/favicon.ico", category: "puzzle" },
      { title: "ShellShock.io", url: "https://shellshock.io/", img: "https://static.shellshock.io/favicon.ico", category: "action" },
      { title: "HexGL", url: "https://hexgl.bkcore.com/play/", img: "https://hexgl.bkcore.com/images/icon-144.png", category: "action" },
      { title: "Pacman", url: "https://www.google.com/logos/2010/pacman10-i.html", img: "https://upload.wikimedia.org/wikipedia/en/5/59/Pac-man.png", category: "classic" }
    ];

    const grid = document.getElementById('gamesGrid');
    const searchInput = document.getElementById('searchInput');
    const filterButtons = document.querySelectorAll('.filter-btn');

    function displayGames(filter = "all", search = "") {
      grid.innerHTML = "";
      const filtered = games.filter(game => {
        const matchesCategory = filter === "all" || game.category === filter;
        const matchesSearch = game.title.toLowerCase().includes(search.toLowerCase());
        return matchesCategory && matchesSearch;
      });
      for (const game of filtered) {
        const card = document.createElement("div");
        card.className = "game-card";
        card.innerHTML = `
          <a href="${game.url}" target="_blank">
            <img src="${game.img}" alt="${game.title}" />
            ${game.title}
          </a>
        `;
        grid.appendChild(card);
      }
    }

    searchInput.addEventListener("input", () => {
      const category = document.querySelector(".filter-btn.active").dataset.category;
      displayGames(category, searchInput.value);
    });

    filterButtons.forEach(button => {
      button.addEventListener("click", () => {
        document.querySelector(".filter-btn.active").classList.remove("active");
        button.classList.add("active");
        displayGames(button.dataset.category, searchInput.value);
      });
    });

    displayGames();
  </script>
</body>
</html>
